load(
    "@pypi//:requirements.bzl",
    "requirement",
)
load("@rules_pkg//pkg:zip.bzl", "pkg_zip")
load("@rules_python//python:defs.bzl", "py_binary")
load("@rules_python//python:pip.bzl", "compile_pip_requirements")
load("@rules_shar//:macros.bzl", sh_binary = "shar_binary")
load("//build:my_package_name.bzl", "name_part_from_command_line")

compile_pip_requirements(
    name = "requirements",
    extra_args = [
        "--allow-unsafe",
        "--resolver=backtracking",
    ],
    requirements_in = "requirements.in",
    requirements_txt = "requirements_lock.txt",
    # The requirements generator is broken, as it depends on system python even
    # if a hermetic python installation is used.
    tags = ["manual"],
)

py_binary(
    # This target may not be named `fusesoc` since it will conflict with the
    # `fusesoc` library in `deps`. This works locally for some reason, but
    # fails in github actions.
    name = "run_fusesoc",
    srcs = ["run_fusesoc.py"],
    visibility = ["//visibility:public"],
    deps = [
        requirement("fusesoc"),
        requirement("edalize"),
        requirement("mako"),
    ],
)

sh_binary(
    name = "fusesoc",
    srcs = [
        "fusesoc.bash",
    ],
    data = [
        ":run_fusesoc",
        "@rules_python//python/bin:python",
    ],
)

name_part_from_command_line(
    name = "name_part_from_command_line",
    build_setting_default = "@set_me@",
    visibility = ["//visibility:public"],
)

pkg_zip(
    name = "zip",
    srcs = [
        ":fusesoc_shar",
    ],
    package_dir = "fusesoc/bin",
    package_file_name = "fusesoc-bin-{name_part}.zip",
    package_variables = ":name_part_from_command_line",
)
